model PatientReferral{
  id String @id @default(cuid()) @map("_id")
  patientFirstName String
  patientLastName String
  patientEmail String @unique
  patientPhone String
  patientStreetAddress String
  patientCity String
  patientStateOrProvince String
  patientPostalOrZipCode String
  patientBirthday DateTime
  patientPrimaryCareProvider String
  patientPowerOfAttorney String
  patientPowerOfAttorneyEmail String
  patientInsuranceProvider String
  patientInsuranceIdNumber String
  patientMedicareIdNumber String
  patientDiagnosis String
  patientDurationOfWound String
  patientMedicalProviderCompanyName String
  patientMedicalProviderFirstName String
  patientMedicalProviderLastName String
  patientMedicalProviderEmail String
  patientMedicalProviderPhone String
  patientMedicalProviderStreetAddress String
  patientMedicalProviderCity String
  patientMedicalProviderStateOrProvince String
  patientMedicalProviderPostalOrZipCode String
  patientMedicalProviderType String
  createDate DateTime @default(now())
  updateDate DateTime @updatedAt
}

model Testimonial{
  id String @id @default(cuid()) @map("_id")
  personFullName String
  personImageUrl String
  personRelationship String
  personMessage String
}

model SocialLinks{
  id String @id @default(cuid()) @map("_id")
  name String
  handle String
}